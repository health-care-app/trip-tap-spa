{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@AppStore": ["app/app.store"],
      "@Components/*": ["app/shared/components/*"],
      "@Consts/*": ["app/shared/consts/*"],
      "@Enums/*": ["app/shared/enums/*"],
      "@Environment": ["environments/environment"],
      "@Form/*": ["app/shared/form/*"],
      "@Store/*": ["app/shared/store/*"],
      "@Helpers/*": ["app/core/helpers/*"],
      "@Interceptors/*": ["app/shared/interceptors/*"],
      "@Mocks/*": ["app/shared/mocks/*"],
      "@Models/*": ["app/shared/models/*"],
      "@Types/*": ["app/shared/types/*"],
      "@Providers/*": ["app/shared/providers/*"],
      "@Services/*": ["app/shared/services/*"],
      "@Modules/*": ["app/modules/*"],
      "@Pipes/*": ["app/shared/pipes/*"],
      "@Specs/*": ["app/specs/*"],
      "@Guards/*": ["app/shared/guards/*"],
      "@Utils/*": ["app/core/utils/*"],
      "@Auth/*": ["app/modules/auth/*"],
      "@Customers/*": ["app/modules/customers/*"],
      "@TripOrganizers/*": ["app/modules/trip-organizers/*"]
    },
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
